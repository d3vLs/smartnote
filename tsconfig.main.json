{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "build",
    "rootDir": "app",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["app/common/*"]
    }
  },
  "include": ["app/main/**/*", "app/repo/**/*", "app/services/**/*", "app/common/**/*"]
}
